@using CapcomFitness.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row my-auto">
    <div class="mx-auto col-sm-8 col-md-6 col-lg-4">
        @*<h2 class="text-dark">Login to your account</h2>*@
        <form asp-controller="Account" asp-action="Login" method="post" role="form">
            @*<h5>Sign in to access website features!</h5>*@
            @*<hr />*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="UserName" placeholder="Email" class="form-control" />
                <label asp-for="UserName" class="">Username</label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <label asp-for="Password" class="">Password</label>
                <a asp-controller="Account" asp-action="Register" class="text-muted small">Don't have an account?</a>
            </div>
            <div class="form-check mb-2">
                <input class="form-check-input" type="checkbox" asp-for="RememberMe" checked>
                <label class="form-check-label" asp-for="RememberMe">Remember me</label>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary">Login</button> <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>