@using CapcomFitness.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="mx-auto col-sm-8 col-md-6 col-lg-4">
        @*<h1 class="text-primary">Register</h1>*@
        <form asp-controller="Account" asp-action="Register" method="post" role="form">
            @*<h4>Create a new account to get started!</h4>
            <hr />*@
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="UserName" placeholder="Username" class="form-control" />
                <label asp-for="UserName" class="">Username</label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <label asp-for="Email" class="">Email</label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <label asp-for="Password" class="">Password</label>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                <label asp-for="ConfirmPassword" class="">Confirm Password</label>
                <a asp-controller="Account" asp-action="Login" class="text-muted small">Already have an account?</a>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary">Register</button> <a asp-controller="Home" asp-action="Index" class="btn btn-lg btn-secondary">Go Back</a>
            </div>
        </form>
    </div>
</div>